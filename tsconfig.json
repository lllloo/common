{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./src",
    "allowJs": true,
    "checkJs": true,
    // 把 catch  捕獲的參數改成 any
    "useUnknownInCatchVariables": false,
    "downlevelIteration": true,
    // 路徑簡寫
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.js"
  ]
}